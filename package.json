{
  "name": "@xilution/todd-coin-api",
  "version": "1.0.0",
  "description": "The Todd Coin Cryptocurrency API",
  "scripts": {
    "build": "tsc",
    "docker-build": "docker build --build-arg NPM_TOKEN=$NPM_TOKEN -t xilution/todd-coin-api .",
    "docker-scan": "docker scan xilution/todd-coin-api",
    "docker-start-all": "docker-compose -f docker-compose.yml up -d",
    "docker-restart-all": "docker-compose -f docker-compose.yml restart",
    "docker-stop-all": "docker-compose -f docker-compose.yml down",
    "docker-start-db": "docker-compose -f docker-compose.yml up -d db",
    "docker-restart-db": "docker-compose -f docker-compose.yml restart db",
    "docker-stop-db": "docker-compose -f docker-compose.yml stop db",
    "docker-logs-db": "docker-compose logs -f db",
    "docker-logs-api": "docker-compose logs -f api",
    "clean": "rm -rf ./coverage ./dist",
    "format": "prettier --write .",
    "start": "ts-node ./src/index.ts",
    "watch": "nodemon --watch src -e ts --exec \"npm run build && npm run start\"",
    "verify": "prettier --check . && eslint . --ext .js,.ts && npm run test && npm run build",
    "semantic-release": "semantic-release",
    "test": "jest ./test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xilution/todd-coin-api"
  },
  "bugs": {
    "url": "https://github.com/xilution/todd-coin-api/issues"
  },
  "homepage": "https://github.com/xilution/todd-coin-api",
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@hapi/hapi": "^20.2.1",
    "@xilution/todd-coin-brokers": "^1.2.2",
    "@xilution/todd-coin-constants": "^1.1.0",
    "@xilution/todd-coin-types": "^1.3.0",
    "@xilution/todd-coin-utils": "^2.1.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "ts-japi": "^1.6.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@semantic-release-plus/docker": "^3.1.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/elliptic": "^6.4.14",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.10",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "chance": "^1.1.8",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "author": "Todd Brunia <tbrunia@gmail.com> (http://www.github.com/tbrunia)",
  "license": "MIT",
  "private": false
}
